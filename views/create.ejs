<!DOCTYPE html>
<html lang="en">
    <%- include("./partials/head") %>
<body>
    <!-- layout -->
    <div class="container pt-5">
        <div class="card text-white bg-dark">
            <div class="card-body">
                <form action="/create" method="post">
                    <h1 class="card-title mb-4">Create</h1>
                    <div class="row mb-3">
                        <div class="col-sm-3 text-light">Name *</div>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" name="name" placeholder="Name *" required />
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-3 text-light">Surname *</div>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" name="surname" placeholder="Surname *" required />
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-3 text-light">Email</div>
                        <div class="col-sm-9">
                            <input type="email" class="form-control" name="email" placeholder="Email" />
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-3 text-light">Telephone</div>
                        <div class="col-sm-9">
                            <input type="tel" class="form-control" name="tel" placeholder="Telephone" pattern="[0-9]*" inputmode="numeric" />
                        </div>
                    </div>
                    
                    <div class="row mb-3">
                        <div class="col-sm-3 text-light">Address</div>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" name="address" placeholder="Address" />
                        </div>
                    </div>
                    
                    <div class="d-grid gap-2 d-md-flex justify-content-between">
                        <small class="form-text text-muted mb-2">"All fields marked with * are required."</small>
                        <button type="submit" class="btn btn-primary btn-light">Add</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- footer -->
    <%- include("./partials/footer") %>
</body>
</html>



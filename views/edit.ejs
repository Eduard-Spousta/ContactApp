<!DOCTYPE html>
<html lang="en">
    <%- include("./partials/head") %>
<body>
    <!-- layout -->
    <div class="container pt-5">
        <div class="card text-white bg-dark">
            <div class="card-body">
                <form action="/edit" method="post">
                    <h1 class="card-title mb-4">Edit</h1>
                    <input type="hidden" name="id" value="<%= contact._id %>">
                    <div class="row mb-3">
                        <label for="name" class="col-sm-3 col-form-label">Name *</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" name="name" id="name" placeholder="Name" value="<%= contact.name %>" required />
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="surname" class="col-sm-3 col-form-label">Surname *</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" name="surname" id="surname" placeholder="Surname" value="<%= contact.surname %>" required>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="email" class="col-sm-3 col-form-label">Email</label>
                        <div class="col-sm-9">
                            <input type="email" class="form-control" name="email" id="email" placeholder="Email" value="<%= contact.email %>">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="tel" class="col-sm-3 col-form-label">Telephone</label>
                        <div class="col-sm-9">
                            <input type="tel" class="form-control" name="tel" id="tel" placeholder="Telephone" pattern="[0-9]*" value="<%= contact.tel %>">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="address" class="col-sm-3 col-form-label">Address</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" name="address" id="address" placeholder="Address" value="<%= contact.address %>">
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary btn-light">Save</button>
                </form>
            </div>
        </div>
    </div>

    <!-- footer -->
    <%- include("./partials/footer") %>
</body>
</html>
